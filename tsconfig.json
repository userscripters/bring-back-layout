{
    "compilerOptions": {
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "target": "es2019",
        "outDir": "dist",
        "moduleResolution": "node",
        "noErrorTruncation": true,
        "skipLibCheck": true,
        "downlevelIteration": true,
        "removeComments": true
    },
    "compileOnSave": true
}
